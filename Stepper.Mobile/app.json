{
  "expo": {
    "name": "Stepper",
    "slug": "stepper",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stepper.mobile",
      "associatedDomains": [
        "applinks:stepper.com"
      ],
      "infoPlist": {
        "NSHealthShareUsageDescription": "Stepper needs access to your health data to automatically track your daily steps from Apple Health.",
        "NSHealthUpdateUsageDescription": "Stepper needs permission to save step data.",
        "UIBackgroundModes": [
          "processing"
        ]
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.background-delivery": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.stepper.mobile",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "stepper.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "stepper"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "stepper",
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          }
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      [
        "react-native-health",
        {
          "healthSharePermission": "Stepper needs access to your health data to automatically track your daily steps from Apple Health.",
          "healthUpdatePermission": "Stepper needs permission to save step data."
        }
      ],
      [
        "react-native-health-connect",
        {
          "requestPermissionsRationale": "Stepper needs access to your health data to automatically track your daily steps."
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-background-task",
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "98e5123e-bcac-42ad-8639-279de66998c5"
      }
    },
    "owner": "bossen"
  }
}
